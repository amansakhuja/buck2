CONFIG_SRCS = [
  'AbstractRageConfig.java',
  'AbstractUserLocalConfiguration.java',
  'AbstractRageJsonResponse.java',
]

java_immutables_library(
  name = 'config',
  srcs = CONFIG_SRCS,
  autodeps = True,
  immutable_types = [
    'RageConfig',
    'RageJsonResponse',
  ],
  visibility = [
    'PUBLIC',
  ],
)

java_immutables_library(
  name = 'rage',
  srcs = glob(
    ['*.java'],
    excludes = CONFIG_SRCS,
  ),
  autodeps = True,
  immutable_types = [
    'BuildLogEntry',
    'UserReport',
  ],
  visibility = [
    'PUBLIC',
  ],
)
