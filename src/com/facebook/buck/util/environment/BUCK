PLATFORM_SRCS = [
  'Architecture.java',
  'Platform.java',
]

java_library(
  name = 'platform',
  srcs = PLATFORM_SRCS,
  deps = [
    '//src/com/facebook/buck/log:api',
    '//third-party/java/guava:guava',
  ],
  visibility = [
    'PUBLIC',
  ],
)

FILTER_SRCS = [
  'EnvironmentFilter.java',
]

java_library(
  name = 'env-filter',
  srcs = FILTER_SRCS,
  deps = [
    ':platform',
    '//third-party/java/guava:guava',
  ],
  visibility = [
    'PUBLIC',
  ],
)

java_immutables_library(
  name = 'environment',
  srcs = glob(['*.java'], excludes = FILTER_SRCS + PLATFORM_SRCS),
  tests = [
    '//test/com/facebook/buck/util/environment:environment',
  ],
  deps = [
    ':env-filter',
    ':platform',
    '//third-party/java/ObjCBridge:ObjCBridge',
    '//third-party/java/guava:guava',
    '//third-party/java/jna:jna',
    '//src/com/facebook/buck/log:api',
    '//src/com/facebook/buck/util:io',
    '//src/com/facebook/buck/util:tristate',
    '//src/com/facebook/buck/util:util',
    '//src/com/facebook/buck/util/network:network',
  ],
  visibility = [
    'PUBLIC',
  ],
)
