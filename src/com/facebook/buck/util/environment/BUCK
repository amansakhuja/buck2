PLATFORM_SRCS = [
  'Architecture.java',
  'Platform.java',
]

java_library(
  name = 'platform',
  srcs = PLATFORM_SRCS,
  visibility = [
    'PUBLIC',
  ],
  # This library is deep in the dependency tree, keep its dependency list small.
  deps = [
    '//third-party/java/guava:guava',
  ],
)

FILTER_SRCS = [
  'EnvironmentFilter.java',
]

java_library(
  name = 'env-filter',
  srcs = FILTER_SRCS,
  autodeps = True,
  visibility = [
    'PUBLIC',
  ],
)

java_immutables_library(
  name = 'environment',
  srcs = glob(
    ['*.java'],
    excludes = FILTER_SRCS + PLATFORM_SRCS,
  ),
  autodeps = True,
  immutable_types = [
    'BuildEnvironmentDescription',
  ],
  tests = [
    '//test/com/facebook/buck/util/environment:environment',
  ],
  visibility = [
    'PUBLIC',
  ],
)
