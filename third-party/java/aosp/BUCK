java_library(
  name = 'aosp',
  srcs = glob(['src/**/*.java']),
  licenses = [
    'NOTICE',
  ],
  tests = [
    ':tests',
  ],
  visibility = [
    'PUBLIC',
  ],
)

TEST_SRC = ['tests/src/**/*Test.java']

java_library(
  name = 'testutils',
  srcs = glob(
    ['tests/src/**/*.java'],
    excludes = TEST_SRC,
  ),
  licenses = [
    'NOTICE',
  ],
  deps = [
    ':aosp',
    '//third-party/java/junit:junit',
  ],
)

java_test(
  name = 'tests',
  srcs = glob(TEST_SRC),
  licenses = [
    'NOTICE',
  ],
  resources = glob(['tests/src/com/android/manifmerger/data/*']),
  deps = [
    ':aosp',
    ':testutils',
    '//third-party/java/junit:junit',
  ],
)
