apple_bundle(
  name = 'DemoApp',
  binary = ':DemoAppBinary',
  extension = 'app',
  info_plist = 'Info.plist',
)

apple_binary(
  name = 'DemoAppBinary',
  preprocessor_flags = ['-fobjc-arc'],
  headers = glob([
    'DemoAppBinary/*.h',
  ]),
  srcs = glob([
    'DemoAppBinary/*.m',
  ]),
  frameworks = [
    '$SDKROOT/System/Library/Frameworks/UIKit.framework',
    '$SDKROOT/System/Library/Frameworks/Foundation.framework',
  ],
  libraries = [
    '$SDKROOT/usr/lib/libobjc.dylib',
  ],
  deps = [
    ':DemoAppLibrary',
    ':Assets1',
    ':Assets2',
  ],
)

apple_library(
  name = 'DemoAppLibrary',
  preprocessor_flags = ['-fobjc-arc'],
  exported_headers = glob([
    'DemoAppLibrary/*.h',
  ]),
  srcs = glob([
    'DemoAppLibrary/*.m',
  ]),
  deps = [
    ':Assets1',
    ':Assets3',
  ],
  frameworks = [],
)

apple_asset_catalog(
  name = 'Assets1',
  dirs = [ 'Assets1.xcassets' ],
)

apple_asset_catalog(
  name = 'Assets2',
  dirs = [ 'Assets2.xcassets' ],
)

apple_asset_catalog(
  name = 'Assets3',
  dirs = [ 'Assets3.xcassets' ],
  app_icon = 'Icon',
  launch_image = 'LaunchImage',
)

genrule(
  name = 'MakeCombinedAssets',
  cmd = 'mkdir $OUT && for s in $SRCS; do cp -r $s/* $OUT/; done',
  srcs = [
    'Assets2.xcassets',
  ],
  out = "Combined.xcassets",
)

apple_asset_catalog(
  name = "AssetsCombined",
  dirs = [ ':MakeCombinedAssets' ],
)

apple_bundle(
  name = 'CombinedAssetsApp',
  binary = ':CombinedAssetsAppBinary',
  extension = 'app',
  info_plist = 'Info.plist',
)

apple_binary(
  name = 'CombinedAssetsAppBinary',
  preprocessor_flags = ['-fobjc-arc'],
  headers = glob([
    'DemoAppBinary/*.h',
  ]),
  srcs = glob([
    'DemoAppBinary/*.m',
  ]),
  frameworks = [
    '$SDKROOT/System/Library/Frameworks/UIKit.framework',
    '$SDKROOT/System/Library/Frameworks/Foundation.framework',
  ],
  libraries = [
    '$SDKROOT/usr/lib/libobjc.dylib',
  ],
  deps = [
    ':DemoAppLibrary',
    ':AssetsCombined',
  ],
)

apple_asset_catalog(
  name = 'ExtraIconAndLaunchImage',
  dirs = [ 'ExtraIconAndLaunchImage.xcassets' ],
  app_icon = 'Icon2',
  launch_image = 'LaunchImage2',
)

apple_binary(
  name = 'DemoAppBinaryWithMoreThanOneIconAndLaunchImage',
  preprocessor_flags = ['-fobjc-arc'],
  headers = glob([
    'DemoAppBinary/*.h',
  ]),
  srcs = glob([
    'DemoAppBinary/*.m',
  ]),
  frameworks = [
    '$SDKROOT/System/Library/Frameworks/UIKit.framework',
    '$SDKROOT/System/Library/Frameworks/Foundation.framework',
  ],
  libraries = [
    '$SDKROOT/usr/lib/libobjc.dylib',
  ],
  deps = [
    ':DemoAppLibrary',
    ':Assets1',
    ':Assets2',
    ':ExtraIconAndLaunchImage',
  ],
)

apple_bundle(
  name = 'DemoAppWithMoreThanOneIconAndLaunchImage',
  binary = ':DemoAppBinaryWithMoreThanOneIconAndLaunchImage',
  extension = 'app',
  info_plist = 'Info.plist',
)
